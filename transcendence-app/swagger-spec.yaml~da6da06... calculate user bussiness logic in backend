        - email
        - password
        - confirmationPassword
    User:
      type: object
      properties:
        username:
          type: string
        email:
          type: string
        fullName:
          type: string
        password:
          type: string
          nullable: true
        avatarId:
          type: string
          nullable: true
        avatarX:
          type: number
          default: 0
        avatarY:
          type: number
          default: 0
        id:
          type: string
        createdAt:
          format: date-time
          type: string
      required:
        - username
        - email
        - fullName
        - password
        - avatarId
        - avatarX
        - avatarY
        - id
        - createdAt
    LoginUserDto:
      type: object
      properties:
        username:
          type: string
        password:
          type: string
      required:
        - username
        - password
    UpdateUserDto:
