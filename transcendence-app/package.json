{
  "name": "transcendence-app",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "style": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "swagger:gen": "nest start -c swagger.nest-cli.json",
    "knex:seed:run": "knex seed:run",
    "knex:migrate:dev": "knex migrate:latest",
    "knex:migrate:prod": "knex --knexfile ./dist/knexfile.js migrate:latest",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "pretest:e2e": "$(../scripts/get-docker-compose.sh) -f docker-compose.test.yml up -d && cross-env NODE_ENV=test npx knex migrate:latest && cross-env NODE_ENV=test npx knex seed:run",
    "test:e2e": "jest --config ./test/jest-e2e.json; ret=$?; npm run post:test:e2e; exit $ret",
    "swagger:e2e": "jest --config ./test/jest-e2e.json --verbose --testNamePattern='^\\[Feature\\] User - /users should generate swagger spec$' --runTestsByPath ./test/swagger/swaggerdoc.e2e-spec.ts; ret=$?; npm run post:test:e2e; exit $ret",
    "post:test:e2e": "$(../scripts/get-docker-compose.sh) -f docker-compose.test.yml down -v"
  },
  "dependencies": {
    "@casl/ability": "^6.3.3",
    "@nestjs/axios": "^2.0.0",
    "@nestjs/common": "^9.3.9",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.3.9",
    "@nestjs/event-emitter": "^1.4.1",
    "@nestjs/passport": "^9.0.3",
    "@nestjs/platform-express": "^9.3.9",
    "@nestjs/platform-socket.io": "^9.3.9",
    "@nestjs/swagger": "^6.2.1",
    "@nestjs/websockets": "^9.3.9",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "connect-memcached": "^2.0.0",
    "cookie-parser": "^1.4.6",
    "express-session": "^1.17.3",
    "file-type": "^18.2.1",
    "github-like-avatar-generator": "^1.1.10",
    "knex": "^2.4.2",
    "otplib": "^12.0.1",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "passport-oauth2": "^1.6.1",
    "pg": "^8.9.0",
    "pong-engine": "^1.0.0",
    "qrcode": "^1.5.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^4.1.3",
    "rxjs": "^7.8.0",
    "socket.io": "^4.6.1",
    "transcendence-shared": "^1.0.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@nestjs/cli": "^9.2.0",
    "@nestjs/schematics": "^9.0.4",
    "@nestjs/testing": "^9.3.9",
    "@types/connect-memcached": "^1.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.6",
    "@types/jest": "29.4.0",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.14.4",
    "@types/passport": "^1.0.12",
    "@types/passport-local": "^1.0.35",
    "@types/passport-oauth2": "^1.4.12",
    "@types/pg": "^8.6.6",
    "@types/qrcode": "^1.5.0",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.4.3",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.1",
    "typescript": "^4.9.5",
    "yaml": "^2.2.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
